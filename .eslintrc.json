{
  "extends": "airbnb-base",
  "rules": {
    "no-plusplus": "off",
    "no-console": "off",
    "no-continue": "off",
    "no-await-in-loop": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"]
}
